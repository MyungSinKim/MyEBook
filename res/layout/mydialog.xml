<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="wrap_content"
	android:layout_height="wrap_content" android:gravity="center_vertical|center_horizontal"
	android:background="#FFFFFFFF">
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:paddingLeft="25dip"
		android:paddingTop="10dip">
		<ImageView android:id="@+id/myicon1" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_alignParentLeft="true"
			android:background="@drawable/dialogicon" />
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="请选择您要去的网站"
			android:textSize="20dip" android:layout_toRightOf="@+id/myicon1"
			android:layout_centerInParent="true" android:textColor="#000000"
			android:layout_marginLeft="10dip" />

	</RelativeLayout>
	<TextView android:layout_width="fill_parent"
		android:layout_height="1dip" android:background="@drawable/titlebg1"
		android:layout_marginTop="5dip" />
	
		
	<RadioGroup android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	  >
	<RadioButton android:id="@+id/qidianRB" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginLeft="30dip" 
		android:text="起点手机小说网" android:textColor="#FF000000"/>
	<RadioButton android:id="@+id/xiaoxiangRB" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginLeft="30dip" 
		android:text="飞库手机小说网" android:textColor="#FF000000"
		/>
	<RadioButton android:id="@+id/hongxiuRB" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginLeft="30dip" 
		android:text="红袖手机小说网" android:textColor="#FF000000"/>
	<RadioButton android:id="@+id/jinjiangRB" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginLeft="30dip" 
		android:text="晋江手机小说网" android:textColor="#FF000000"/>
	</RadioGroup>
		
	<RelativeLayout android:layout_width="fill_parent"

		android:layout_height="wrap_content" android:paddingTop="10dip"

		android:gravity="bottom|center_horizontal" android:paddingBottom="10dip">

		<Button android:id="@+id/dialog_button_ok"

			android:layout_alignParentLeft="true" android:layout_width="100dip"

			android:layout_height="wrap_content" android:text="确定" />

		<Button android:id="@+id/dialog_button_cancel"

			android:layout_width="100dip" android:layout_height="wrap_content"

			android:layout_toRightOf="@id/dialog_button_ok"

			android:layout_marginLeft="35dip" android:text="取消" />

	</RelativeLayout>

</LinearLayout>
